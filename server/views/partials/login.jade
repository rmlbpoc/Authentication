.loginPanel#login.loginPanel-responsive(ng-show="!showSignup")

    aside.col-sm-6.col-sm-height
        h4.range-title
            b Login with
        .range-list
            .range-list-div
                a.btn.btn-primary.login-button-ext(href='/auth/facebook')
                    span.fa.fa-facebook  Log In with Facebook
            .range-list-div
                a.btn.btn-info.login-button-ext(href='/auth/twitter')
                    span.fa.fa-Twitter  Log In with Twitter
            .range-list-div
                a.btn.btn-danger.login-button-ext(href='/auth/google')
                    span.fa.fa-google-plus  Log In with Google
    aside.scol-sm-6.col-sm-height
        h4.range-title
            b Login
        //if message.length>0
        //    .alert.alert-danger
        //        div #{message}
        // LOGIN FORM
        .range-list(ng-show="!showForgot")
            form.range-list-div
                .form-group(style='display:inline-block;')
                    input.form-control(type='text', name='email', autofocus,placeholder='email address' ng-model="user.email")
                br
                .form-group(style='display:inline-block;')
                    input.form-control(type='password', name='password', placeholder='password' ng-model="user.password")
                br
                button.formgroup.btn.btn-primary.login-button(ng-click="login()" style='display:inline-block;') Login

            span.val-error-msg(ng-bind="message")
            br
            a.btn.btn-link(ng-click="showForgot=!showForgot")
                p.login-links Forgot Password?

        div(ng-show="showForgot")
            form.forgot-password
                .form-group(style='display:inline-block;')
                    input.form-control(type='text', name='email', autofocus, placeholder='email address' ng-model="user.email")
            div
                button.formgroup.btn.btn-primary.login-button(ng-click="forgot()" style='display:inline-block;') Reset Password

            span.val-error-msg(ng-bind="message")
            br
            a.btn.btn-link(ng-click="showForgot=!showForgot")
                p.login-links Back to login
    .signup-bot
        a.btn#signupLink.btn-link(ng-click="showSignup=!showSignup")
            p Create an account